#include <linux/bpf.h>
#include <bpf/bpf_helpers.h>
#include <linux/if_ether.h>
#include <linux/ip.h>
#include <linux/tcp.h>
#include <linux/in.h>
//Create BPF packet counter map 
struct {
    __uint(type, BPF_MAP_TYPE_ARRAY);
    __uint(max_entries, 3); // 0: Total, 1: TCP, 2: ICMP
    __type(key, __u32);
    __type(value, __u64);
} pkt_count_map SEC(".maps");


SEC("xdp_static")
int xdp_logic(struct xdp_md *ctx)
{
    void *data_end = (void*)(long)ctx->data_end;
    void *data = (void *)(long)ctx->data;
    __u32 key = 0;
    __u64 *value;


    struct ethhdr *eth = data;
    if ((void*)(eth + 1) > data_end) return XDP_PASS;


    //Total traffic calculator
    key = 0;
    value = bpf_map_lookup_elem(&pkt_count_map, &key);
    if (value) 
        __sync_fetch_and_add(value, 1);


    //IP 
    if (eth->h_proto != __constant_htons(ETH_P_IP)) return XDP_PASS;
    struct iphdr *iph = data + sizeof(*eth);
    if ((void*)(iph +1) > data_end) return XDP_PASS;

    //Identify TCP and ICMP
    if (iph->protocol ==IPPROTO_TCP){
        key = 1;// Update Bulk TCP in map
    } else if (iph->protocol == IPPROTO_ICMP){
        key = 2;//Update Short ICMP in map 
    } else {
        return XDP_PASS;
    }

    value = bpf_map_lookup_elem(&pkt_count_map, &key);
    if (value){
        __sync_fetch_and_add(value, 1);
    }

    return XDP_PASS;

}

char _license[] SEC("license") = "GPL";




